# List all files colorized in long format
alias l="gls -lF --color"

# List all files colorized in long format, including dot files
alias la="gls -laF --color"

# List only directories
alias lsd="ls -lF --color | grep --color=never '^d'"

# Always use color output for `ls`
alias ls="gls --color --ignore-backups"

alias g="git"

# Lock the screen (when going AFK)
alias afk="open /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app"

# Get OS X Software Updates, and update installed Ruby gems, Homebrew, npm, and their installed packages
alias update='sudo softwareupdate -i -a; brew upgrade; brew cask upgrade;brew cleanup;yarn global upgrade --latest; gem update --system; gem update; gem cleanup'

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec $SHELL -l"

# List docker-machine instances
alias docks="docker-machine ls"

# Aliases for Docker listings
alias docl=~/Projects/scripts/docker-container-list
alias doil=~/Projects/scripts/docker-image-list
